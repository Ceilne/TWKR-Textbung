;IMAGE_I30_特殊エフェクトチェック(CHAR, エフェクト)--------------------------------------------
;キャラクター特有のエフェクト判定  特殊エフェクトを直接指定したい場合に参照
;引数 "エフェクト" に固有のエフェクトが含まれるかを判定する
;例の通り、STRFINDを使用してください
;-------------------------------------------------------------------------------------------
@IMAGE_I30_特殊エフェクトチェック(CHARA, エフェクト)
#DIM CHARA
#DIMS エフェクト

IF CFLAG:CHARA:대체적용
	;差し替え画像
	SIF STRFIND(エフェクト, "怒り") != -1
		RETURN 1
	SIF STRFIND(エフェクト, "ハート") != -1
		RETURN 1
	SIF STRFIND(エフェクト, "睡眠") != -1
		RETURN 1
	SIF STRFIND(エフェクト, "母乳") != -1
		RETURN 1
	SIF STRFIND(エフェクト, "精液上") != -1
		RETURN 1
	SIF STRFIND(エフェクト, "精液中") != -1
		RETURN 1
	SIF STRFIND(エフェクト, "精液下") != -1
		RETURN 1
	SIF STRFIND(エフェクト, "泣き") != -1
		RETURN 1
	SIF STRFIND(エフェクト, "ダミー") != -1
		RETURN 1
ELSE
	;通常画像
ENDIF

RETURN 0

;IMAGE_I30_特殊エフェクト(CHARA)--------------------------------------------------------------------
;キャラクター特有のエフェクト表示条件
;使用時注意点:
;	RESULTS配列に特殊エフェクトを格納
;	RETURNで追加するエフェクト数を返却すること
;-------------------------------------------------------------------------------------------
@IMAGE_I30_特殊エフェクト(CHARA)
#DIM CHARA
#DIM DYNAMIC エフェクト数 = 0
VARSET RESULTS

IF CFLAG:CHARA:대체적용
	;差し替え画像
	IF TCVAR:CHARA:억지로 || (CFLAG:CHARA:1600 && CFLAG:CHARA:우후후)
		RESULTS:エフェクト数 = 泣き
		エフェクト数 += 1
	ENDIF
	IF TALENT:CHARA:모유체질 && NOWEX:CHARA:분유 && CHECK_NUDE(CHARA)
		RESULTS:エフェクト数 = 母乳
		エフェクト数 += 1
	ENDIF
	;口上から指定する顔絵エフェクト盛り合わせ
	;もう少しスマートなやり方無いもんかね
	IF TFLAG:192 <= -5
		RESULTS:エフェクト数 = ダミー
		エフェクト数 += 1
		IF TFLAG:192 <= -6
			RESULTS:エフェクト数 = 照れ
			エフェクト数 += 1
			IF TFLAG:192 <= -7
				RESULTS:エフェクト数 = ハート
				エフェクト数 += 1
				IF TFLAG:192 <= -8
					RESULTS:エフェクト数 = 汗
					エフェクト数 += 1
					IF TFLAG:192 <= -9
						RESULTS:エフェクト数 = 吐息
						エフェクト数 += 1
					ENDIF
				ENDIF
			ENDIF
		ENDIF
	ENDIF
	IF FLAG:스탠딩종류
		;顔絵
		IF CFLAG:CHARA:구내정액 || TCVAR:CHARA:363 == TIME:0
			;顔ぶっかけ
			RESULTS:エフェクト数 = 精液上
			エフェクト数 += 1
			;朝フェラ後紅潮
			IF TCVAR:CHARA:363 == TIME:0
				RESULTS:エフェクト数 = 照れ
				エフェクト数 += 1
			ENDIF
		ENDIF
		IF CFLAG:CHARA:손에정액 && !(CHECK_NUDE(CHARA) == 0 || (TALENT:CHARA:임신 && CFLAG:CHARA:임신경과일수 >= 41))
			;手コキ
			RESULTS:エフェクト数 = 精液手
			エフェクト数 += 1
		ENDIF
		;着衣ぶっかけどうしよう。ちょっとオーバーかも
		IF CFLAG:CHARA:안면정액
			;胸ぶっかけ
			RESULTS:エフェクト数 = 精液下
			エフェクト数 += 1
		ENDIF
	ELSE
		;立ち絵
		IF CFLAG:CHARA:안면정액
			;胸ぶっかけ
			RESULTS:エフェクト数 = 精液上
			エフェクト数 += 1
		ENDIF
		IF CFLAG:CHARA:손에정액 && !(TALENT:CHARA:임신 && CFLAG:CHARA:임신경과일수 >= 41 / 2) ;KR판 수치변경, 일판은 41
			;手コキ
			RESULTS:エフェクト数 = 精液手
			エフェクト数 += 1
		ENDIF
		IF (CFLAG:CHARA:질내사정 || CFLAG:CHARA:애널사정) && GROUPMATCH(NUDITYCHECK(CHARA), 0, 2)
			;中出し
			RESULTS:エフェクト数 = 精液下
			エフェクト数 += 1
		ENDIF
	ENDIF
	SIF FLAG:시간정지
		RETURN エフェクト数
	IF BASE:CHARA:무드 >= MAXBASE:CHARA:무드*8/10
		IF !(TCVAR:CHARA:억지로 || CFLAG:CHARA:1600 || 업무중체크(CHARA)) 
			RESULTS:エフェクト数 = ハート
			エフェクト数 += 1
		ENDIF
	ELSEIF MARK:CHARA:반발각인 > 0 || CFLAG:CHARA:빡침
		RESULTS:エフェクト数 = 怒り
		エフェクト数 += 1
	ELSEIF CFLAG:CHARA:수면
		RESULTS:エフェクト数 = 睡眠
		エフェクト数 += 1
	ENDIF
ELSE
	;通常画像
	IF FLAG:스탠딩종류
		;顔絵
	ELSE
		;立ち絵
	ENDIF
ENDIF

RETURN エフェクト数

