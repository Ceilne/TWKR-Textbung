;시전 대응
@DO_T_SKILL(사용자, 스킬번호)
#DIM 사용자
#DIM 스킬번호
;스킬의 시전시 처리, 대사만 넣으면 된다
CALL CAN_T_SKILL(사용자, 스킬번호)
IF RESULT == 0
    ;시전불가
    PRINTL 시전할수 없습니다
    RETURN 0
ELSE
    ;시전성공
    CALLFORMF T_SKILL{스킬번호}_STR("스킬명")
    IF 사용자 == MASTER
        SETCOLOR 0xFFFFFF
    ELSE
        SETCOLOR 0xFF4444
    ENDIF
    PRINTFORML %RESULTS%
    RESETCOLOR
    ;이 아래의 대사 작성
    CALLFORM AFTER_T_SKILL{스킬번호}(사용자)
    RETURN 1
ENDIF

;그 스킬을 소유하고 있는지 여부
;보유 대응
@HAVE_T_SKILL(사용자, 스킬번호)
#FUNCTION
#DIM 사용자
#DIM 스킬번호
LOCAL = 스킬번호 + 500 ;TALENT.csv 내 스킬번호

SIF TALENTNAME:LOCAL == ""
    RETURNF 0

SIF TALENT:사용자:LOCAL == 1
    RETURNF 1
SIF 탄막디버그 == 1
    RETURNF 1

RETURNF 0

;지금 스킬을 시전할수 있는지
;실행가부 대응
@CAN_T_SKILL(사용자, 스킬번호)
#DIM 사용자
#DIM 스킬번호
;식중함수는 CALLFORM 사용 불가 이기 때문에 수정

IF HAVE_T_SKILL(사용자, 스킬번호)
    ;이 스킬 소유중
    TRYCALLFORM ONGOING_T_SKILL{스킬번호}(사용자, "남은쿨타임")
    IF RESULT == 0
        ;쿨타임 0 시전가능
        IF TB_SUM_REMAIN(사용자,TCV_침묵)
            RETURN 0
        ENDIF
        CALLFORMF T_SKILL{스킬번호}("HP코스트")
        IF RESULT >= TCVAR:사용자:T_체력
            RETURN 0
        ENDIF
        RESULT = 0
        CALLFORMF T_SKILL{스킬번호}("TSP코스트")
        IF RESULT > BASE:사용자:TSP&&사용자 == MASTER
            RETURN 0
        ENDIF
        RESULT = 0
        RETURN 1
    ELSE
        ;아직 쿨타임이라 시전불가능
        RETURN 0
    ENDIF
ELSE
    ;이스킬 없음, 시전불가
    RETURN 0
ENDIF

