@T_COM스킬사용
#DIM 스킬번호

CALL T_시스템처리(110)

T_시전자 = T_턴주인
T_시전자반대 = T_턴반대
$스킬표시
PRINTL 무엇을 쓸까?
DRAWLINE
FOR 스킬번호,1,T_스킬한계값
    IF HAVE_T_SKILL(T_턴주인, 스킬번호)
        ;스킬 소유, 스킬창에 이름 표시
        CALLFORMF T_SKILL{스킬번호}("타입")
        IF RESULT == 자동형
            CONTINUE
        ENDIF
        CALL CAN_T_SKILL(T_턴주인, 스킬번호)
        IF RESULT == 1
            CALLFORM T_SKILL{스킬번호}_COLOR("색깔_시전가능")
            SETCOLOR RESULT
        ELSE
            CALLFORM T_SKILL{스킬번호}_COLOR("색깔_시전불가")
            SETCOLOR RESULT
        ENDIF
        CALLFORMF T_SKILL{스킬번호}_STR("스킬명")
        PRINTFORMLC [{스킬번호}] %RESULTS%
        RESETCOLOR
        CALLFORMF T_SKILL{스킬번호}("HP코스트")
        IF RESULT > 0
            SETCOLOR C_RED
            PRINTFORMLC  {RESULT}
            RESETCOLOR
        ENDIF
        CALLFORMF T_SKILL{스킬번호}("TSP코스트")
        IF RESULT > 0
            SETCOLOR 0x1111FF
            PRINTFORMLC  {RESULT}
            RESETCOLOR
        ENDIF
        PRINTL
    ELSE
        ;스킬 소유하고 있지 않음
    ENDIF
NEXT
PRINTL
PRINTL [9998]설명
PRINTL [9999]돌아간다
WHILE 1 ;$스킬입력루프
    INPUT
    LOCAL = RESULT
    IF LOCAL == 9999
        RETURN 0
    ELSEIF LOCAL == 9998
        CALL T_HELP
        GOTO 스킬표시
    ELSEIF HAVE_T_SKILL(T_턴주인, LOCAL)
        DRAWLINE
        CALL DO_T_SKILL(T_턴주인, LOCAL)
        ;시전할수 없을때엔 턴 넘김 없어야 합니다
        ;RESULT == 1일때만 턴 넘어감
        RETURN RESULT
    ELSE
        ;시전 불가시는 DO_T_SKILL에서 처리
        PRINTL
        PRINTW 없는 번호입니다.
        CLEARLINE 1
    ENDIF
WEND

