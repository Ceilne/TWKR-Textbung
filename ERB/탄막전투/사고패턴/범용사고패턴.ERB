
;=====================
;행동패턴 1, 퍼지
; 올 랜덤 의사결정, 제일 멍청한 수준
;=====================

@범용사고패턴1(ARG)
#DIM DYNAMIC 행동
#DIM DYNAMIC 스킬번호
#DIM DYNAMIC 카운터
#DIMS DYNAMIC 스킬타입
;ARG = 행동자

행동 = RAND:3
IF 행동 == 0
    ;통상공격
    CALL T_COM공격한다
ELSEIF 행동 == 1&&!TCVAR:ARG:T_회피
    ;회피행동
    CALL T_COM회피한다(ARG)
ELSEIF 행동 == 2
    ;스킬시전
    SELECTCASE RAND:5
        CASE 0
            ;공격형
            스킬타입 '= "공격형"
        CASE 1
            ;방어형
            스킬타입 '= "방어형"
        CASE 2
            ;회복형
            스킬타입 '= "회복형"
        CASE 3
            ;상태이상형
            스킬타입 '= "상태이상형"
        CASE 4
            ;버프형
            스킬타입 '= "버프형"
    ENDSELECT
    스킬타입 '= "공격형"
    스킬번호 = RAND:100
    FOR LOCAL, 1, 2000
        TRYCALLFORM CAN_T_SKILL(ARG, 스킬번호)
        IF RESULT == 1
            CALLFORMF T_SKILL{스킬번호}_STR("타입")
            IF RESULTS == 스킬타입
                카운터++
                IF 카운터 == 스킬번호
                    CALL DO_T_SKILL(ARG, LOCAL)
                    BREAK
                ELSE
                    CONTINUE
                ENDIF
            ELSE
                CONTINUE
            ENDIF
        ELSE
            CONTINUE
        ENDIF
    NEXT
ELSE
    CALL T_COM공격한다
ENDIF
RETURN 1
