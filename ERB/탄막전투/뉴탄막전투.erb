IF 턴넘김 == 1
    CALL 뉴탄막커맨드창
    WHILE 1 ;$내턴입력
    INPUT
    SELECTCASE RESULT
        CASE 100
            ;공격 ;RETURN 0:회피 1:공격성공
            CALL T_COM공격한다
            BREAK
        CASE 101
            ;스킬사용
            IF TCVAR:대상1:T_침묵
                PRINTW 침묵중이라 스킬을 시전할수 없다!
            ELSE
                ;RETURN 0:시전실패 1:시전성공
                CALL T_COM스킬사용
                SIF RESULT == 1
                    BREAK
            ENDIF
        CASE 102
            ;아이템사용
        CASE 200
            ;회피
            CALL T_COM회피한다(대상1)
            BREAK
        CASE 201
            ;휴식
            ;일단은 아무처리 안함
        CASE 999
            ;항복
            RETURN -2
        CASEELSE
    ENDSELECT
    WEND
ENDIF

;승부처리
;일단 체력만 기준으로 봄
;무승부 처리
