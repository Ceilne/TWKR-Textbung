@CM_LOAN_RESET
CM_대출금 = 0
CM_대출일 = 0
CM_상환일 = 0

@CM_이자
IF CM_대출금 > 0
    SELECTCASE DAY - CM_대출일
        CASE 7,14,21,28
            CM_대출금 += MAX(CM_대출금/10,1)
            IF DAY - CM_대출일 == 28
                CALL CM_독촉
            ENDIF
        CASEELSE
            RETURN
    ENDSELECT
ENDIF

