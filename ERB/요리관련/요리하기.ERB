                RETURNF 1
            ENDIF
        NEXT
    ENDIF
    RETURNF 0
ELSEIF ARGS == "주재료"
    IF 주재료 == ARG&&(ARG:1 == 0 || ARG:1 == 주재료요리법)
        RETURNF 1
    ELSE
        RETURNF 0
    ENDIF
ELSEIF ARGS == "부재료"
    FOR LOCAL, 0, 10
        IF 부재료:LOCAL == ARG&&(ARG:1 == 0 || ARG:1 == 부재료요리법:LOCAL)
            RETURNF 1
        ENDIF
    NEXT
    RETURNF 0
ELSEIF ARGS == "양념"
    FOR LOCAL, 0, 10
        IF 양념:LOCAL == ARG
            RETURNF 1
        ENDIF
    NEXT
    RETURNF 0
ENDIF

