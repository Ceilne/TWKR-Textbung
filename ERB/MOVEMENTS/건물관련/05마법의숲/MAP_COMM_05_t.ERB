@MAP_PLACENAME_5(ARG)
#FUNCTIONS
#DIM PLACEID

IF GET_MAPID(ARG) == MAIN_MAP
	SELECTCASE ARG
		CASE 501 TO (MAXROOM - 1)
			RETURNF STR:(ARG + 8000)
		CASE 598
			RETURNF OMANEKI_PLACE()
		CASE 599
			RETURNF "스키마 공간"
		CASE MAXROOM
			RETURNF "숲의 밖"
		CASEELSE
			RETURNF "불명"
	ENDSELECT
ELSE
	RETURNF "불명"
ENDIF

@MAP_VIEWING_5(AA)
#DIMS REF AA, 0
IF !TFLAG:맵변환
	SELECTCASE CFLAG:MASTER:현재위치
		CASE 510 TO 515
			TFLAG:맵변환 = 3
		CASE 521 TO 533
			TFLAG:맵변환 = 2
		CASE 534 TO 537
			TFLAG:맵변환 = 4
		CASEELSE
			TFLAG:맵변환 = 1
	ENDSELECT
ENDIF
CALL DRAW_INFORMATIONLINE(@"%MAPNAME:(TFLAG:맵변환)%")
PRINTFORML 
TRYCALLFORM MAP_FOREST_{TFLAG:맵변환}(AA)

@MAP_CAN_MOVE_5(ARG, ARG:1)
#FUNCTION
#DIM 재택
SELECTCASE ARG
	;코우린도
	CASE 502
		IF !INRANGE(TIME,600,1080)
			TFLAG:이동불능메시지 = ARG
			RETURNF 0
		ENDIF
ENDSELECT
RETURNF 1



