@주도도상승(ARG,ARG:1)
;ARG = 대상
;ARG:1 = 상승량
IF CFLAG:ARG:종속도 > 0
	IF CFLAG:ARG:종속도 < ARG:1
		CFLAG:ARG:주도도 += (ARG:1 - CFLAG:ARG:종속도)
		CFLAG:ARG:종속도 = 0
	ELSE
		CFLAG:ARG:종속도 -= ARG:1
	ENDIF
ELSE
	CFLAG:ARG:주도도 += ARG:1
ENDIF

@종속도상승(ARG,ARG:1)
;ARG = 대상
;ARG:1 = 상승량
IF CFLAG:ARG:주도도 > 0
	IF CFLAG:ARG:주도도 < ARG:1
		CFLAG:ARG:종속도 += (ARG:1 - CFLAG:ARG:주도도)
		CFLAG:ARG:주도도 = 0
	ELSE
		CFLAG:ARG:주도도 -= ARG:1
	ENDIF
ELSE
	CFLAG:ARG:종속도 += ARG:1
ENDIF