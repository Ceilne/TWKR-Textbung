@전원호감도상승(ARG,ARG:1)
;ARG:1은 예외 인원
;ARG는 등락양
FOR LOCAL, 1, CHARANUM
	SIF LOCAL == ARG:1
		CONTINUE
	CFLAG:LOCAL:호감도 += ARG
NEXT
@전원호감도하락(ARG,ARG:1)
FOR LOCAL, 1, CHARANUM
	SIF LOCAL == ARG:1
		CONTINUE
	IF CFLAG:LOCAL:호감도 < ARG
		CFLAG:LOCAL:호감도  = 0
	ELSE
		CFLAG:LOCAL:호감도 -= ARG
	ENDIF
NEXT

